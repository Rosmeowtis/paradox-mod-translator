    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch",
            "program": "${workspaceFolder}/target/debug/pmt",
            "args": [
                "translate",
                "${workspaceFolder}/task.toml"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'paradox_mod_translator'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=paradox-mod-translator"
                ],
                "filter": {
                    "name": "paradox_mod_translator",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pmt'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pmt",
                    "--package=paradox-mod-translator"
                ],
                "filter": {
                    "name": "pmt",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pmt'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pmt",
                    "--package=paradox-mod-translator"
                ],
                "filter": {
                    "name": "pmt",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}